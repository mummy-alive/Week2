<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="250dp">

    <ImageView
        android:id="@+id/matchingImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/matchingName"
        android:layout_width="154dp"
        android:layout_height="18dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="이름"
        app:layout_constraintBottom_toTopOf="@+id/matchingMbti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/matchingMbti"
        android:layout_width="154dp"
        android:layout_height="18dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="MBTI"
        app:layout_constraintBottom_toTopOf="@+id/matchingInterest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/matchingInterest"
        android:layout_width="154dp"
        android:layout_height="18dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="관심사"
        app:layout_constraintBottom_toTopOf="@+id/matchingTech"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/matchingTech"
        android:layout_width="154dp"
        android:layout_height="18dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="기술스택"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>