<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bottomnavigationviewtest.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_recruitpost"
        android:name="com.example.bottomnavigationviewtest.ui.post.PostFragment"
        tools:layout="@layout/fragment_post" >
        <action
            android:id="@+id/action_postFragment_to_postUploadFragment"
            app:destination="@id/postUploadFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_matching"
        android:name="com.example.bottomnavigationviewtest.ui.matching.MatchingFragment"
        tools:layout="@layout/fragment_matching" />
    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.bottomnavigationviewtest.ui.chat.ChatFragment"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.bottomnavigationviewtest.ui.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_likeFragment"
            app:destination="@id/likeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_scrapFragment"
            app:destination="@id/scrapFragment" />
        <action
            android:id="@+id/action_profileFragment_to_myPostFragment"
            app:destination="@id/myPostFragment" />
        <action
            android:id="@+id/action_profileFragment_to_blockFragment"
            app:destination="@id/blockFragment" />
    </fragment>

    <fragment
        android:id="@+id/blockFragment"
        android:name="com.example.bottomnavigationviewtest.ui.profile.BlockFragment"
        tools:layout="@layout/fragment_block" />

    <fragment
        android:id="@+id/likeFragment"
        android:name="com.example.bottomnavigationviewtest.ui.profile.LikeFragment"
        tools:layout="@layout/fragment_like" />

    <fragment
        android:id="@+id/scrapFragment"
        android:name="com.example.bottomnavigationviewtest.ui.profile.ScrapFragment"
        tools:layout="@layout/fragment_scrap" />
    <fragment
        android:id="@+id/myPostFragment"
        android:name="com.example.bottomnavigationviewtest.ui.profile.MyPostFragment"
        tools:layout="@layout/fragment_my_post" />

    <fragment
        android:id="@+id/postUploadFragment"
        android:name="com.example.bottomnavigationviewtest.ui.post.PostUploadFragment"
        android:label="Post Upload"
        tools:layout="@layout/fragment_post_upload" />



</navigation>
